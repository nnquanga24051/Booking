@using Microsoft.AspNetCore.Http

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>

    <link rel="stylesheet" href="~/css/admin-layout.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="admin-wrapper">
        <aside class="admin-sidebar" id="adminSidebar">
            <div class="sidebar-header">
                <div class="sidebar-logo">
                    <h2>🏨 Admin Panel</h2>
                </div>
                <button class="sidebar-toggle" id="sidebarToggle">
                    <span></span>
                </button>
            </div>

            <nav class="sidebar-nav">
                <a href="/Admin/Dashboard" class="nav-item active">
                    <span class="nav-icon">📊</span>
                    <span class="nav-text">Dashboard</span>
                </a>
                <a href="/Admin/Users" class="nav-item">
                    <span class="nav-icon">👥</span>
                    <span class="nav-text">Quản Lý Users</span>
                </a>
                <a href="/Admin/Branches" class="nav-item">
                    <span class="nav-icon">🏢</span>
                    <span class="nav-text">Quản Lý Chi Nhánh</span>
                </a>
                <a href="/Admin/Rooms" class="nav-item">
                    <span class="nav-icon">🏨</span>
                    <span class="nav-text">Quản Lý Phòng</span>
                </a>
                <a href="/Admin/Bookings" class="nav-item">
                    <span class="nav-icon">📅</span>
                    <span class="nav-text">Quản Lý Đặt Phòng</span>
                </a>
                <a href="/Admin/Reports" class="nav-item">
                    <span class="nav-icon">📈</span>
                    <span class="nav-text">Báo Cáo</span>
                </a>
                <a href="/Admin/Settings" class="nav-item">
                    <span class="nav-icon">⚙️</span>
                    <span class="nav-text">Cài Đặt</span>
                </a>
            </nav>

            <div class="sidebar-footer">
                <a href="/" class="nav-item">
                    <span class="nav-icon">🏠</span>
                    <span class="nav-text">Về Trang Chủ</span>
                </a>
            </div>
        </aside>

        <main class="admin-main">
            <header class="admin-header">
                <div class="header-left">
                    <button class="mobile-toggle" id="mobileToggle">☰</button>
                    <div class="breadcrumb">
                        <span>Admin</span>
                        <span class="separator">/</span>
                        <span>@ViewData["Title"]</span>
                    </div>
                </div>

                <div class="header-right">
                    <div class="search-box">
                        <input type="text" placeholder="Tìm kiếm..." class="search-input" />
                        <span class="search-icon">🔍</span>
                    </div>

                    <div class="header-actions">
                        <button class="notification-btn">
                            <span class="notification-icon">🔔</span>
                            <span class="notification-badge">5</span>
                        </button>

                        @{
                            var adminName = Context.Session.GetString("Username") ?? "Admin";
                        }

                        <div class="admin-profile">
                            <button class="profile-btn" id="profileBtn">
                                <span class="profile-avatar">👤</span>
                                <span class="profile-name">@adminName</span>
                                <span class="profile-arrow">▼</span>
                            </button>

                            <div class="profile-dropdown" id="profileDropdown">
                                <div class="dropdown-header">
                                    <strong>@adminName</strong>
                                    <small>Administrator</small>
                                </div>
                                <div class="dropdown-divider"></div>
                                <a href="/Admin/Profile" class="dropdown-item">👤 Tài Khoản</a>
                                <a href="/Admin/Settings" class="dropdown-item">⚙️ Cài Đặt</a>
                                <div class="dropdown-divider"></div>
                                <a href="/Authentications/Logout" class="dropdown-item logout">🚪 Đăng Xuất</a>
                            </div>
                        </div>
                    </div>
                </div>
            </header>

            <div class="admin-content">
                @RenderBody()
            </div>

            @* <footer class="admin-footer">
                <p>&copy; 2026 Booking Hotel - Admin Panel. All rights reserved.</p>
            </footer> *@
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/admin-layout.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>