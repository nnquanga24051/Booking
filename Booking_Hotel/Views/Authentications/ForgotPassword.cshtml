
@{
    ViewData["Title"] = "Quên Mật Khẩu";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Booking Hotel</title>
    <link rel="stylesheet" href="~/css/auth-styles.css" />
</head>
<body>
    <div class="container">
        <div class="form-container">
            <div class="logo">
                <div class="logo-icon">🏨</div>
                <div class="logo-text">Booking Hotel</div>
            </div>

            <h2>Quên Mật Khẩu</h2>
            <p class="subtitle">Nhập email của bạn để nhận liên kết đặt lại mật khẩu.</p>

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["ErrorMessage"]
                </div>
            }

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    @TempData["SuccessMessage"]
                </div>
            }

            <form asp-action="ForgotPassword" asp-controller="Authentications" method="post">
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <label>Email</label>
                    <input type="email" placeholder="Nhập email đã đăng ký" />
                    <span class="text-danger"></span>
                </div>

                <button type="submit" class="btn">Gửi Yêu Cầu</button>

                <div class="switch-form">
                    <a asp-action="Login" asp-controller="Authentications">← Quay lại đăng nhập</a>
                </div>
            </form>
        </div>

        <div class="side-panel">
            <h3>Khôi Phục Tài Khoản</h3>
            <p>Chúng tôi sẽ gửi một email chứa liên kết để đặt lại mật khẩu của bạn.</p>

            <div class="feature-list">
                <div class="feature-item">
                    <div class="feature-icon">✓</div>
                    <span>Quy trình bảo mật</span>
                </div>
                <div class="feature-item">
                    <div class="feature-icon">✓</div>
                    <span>Link có thời hạn 24h</span>
                </div>
                <div class="feature-item">
                    <div class="feature-icon">✓</div>
                    <span>Dễ dàng đặt lại</span>
                </div>
                <div class="feature-item">
                    <div class="feature-icon">✓</div>
                    <span>Hỗ trợ nhanh chóng</span>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>