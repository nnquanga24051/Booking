
@{
    ViewData["Title"] = "Đặt Lại Mật Khẩu";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Booking Hotel</title>
    <link rel="stylesheet" href="~/css/auth-styles.css" />
</head>
<body>
    <div class="container">
        <div class="form-container">
            <div class="logo">
                <div class="logo-icon">🏨</div>
                <div class="logo-text">Booking Hotel</div>
            </div>

            <h2>Đặt Lại Mật Khẩu</h2>
            <p class="subtitle">Nhập mật khẩu mới cho tài khoản của bạn.</p>

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["ErrorMessage"]
                </div>
            }

            <form asp-action="ResetPassword" asp-controller="Authentications" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" />
                <input type="hidden"  />

                <div class="form-group">
                    <label >Mật khẩu mới</label>
                    <input  type="password" placeholder="Tối thiểu 6 ký tự" />
                    <span  class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label >Xác nhận</label>
                    <input type="password" placeholder="Nhập lại mật khẩu mới" />
                    <span class="text-danger"></span>
                </div>

                <button type="submit" class="btn">Đặt Lại Mật Khẩu</button>

                <div class="switch-form">
                    <a asp-action="Login" asp-controller="Authentications">← Quay lại đăng nhập</a>
                </div>
            </form>
        </div>

        <div class="side-panel">
            <h3>Tạo Mật Khẩu Mới</h3>
            <p>Vui lòng tạo mật khẩu mạnh để bảo vệ tài khoản của bạn.</p>

            <div class="feature-list">
                <div class="feature-item">
                    <div class="feature-icon">✓</div>
                    <span>Tối thiểu 6 ký tự</span>
                </div>
                <div class="feature-item">
                    <div class="feature-icon">✓</div>
                    <span>Kết hợp chữ & số</span>
                </div>
                <div class="feature-item">
                    <div class="feature-icon">✓</div>
                    <span>Tránh dùng lại mật khẩu cũ</span>
                </div>
                <div class="feature-item">
                    <div class="feature-icon">✓</div>
                    <span>Bảo mật cao</span>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>