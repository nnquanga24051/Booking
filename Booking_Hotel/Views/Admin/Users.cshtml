@model List<Booking_Hotel.Models.ViewModels.AdminUserVM>

@{
    ViewData["Title"] = "Quản Lý Người Dùng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-table.css" asp-append-version="true" />
}

<div class="page-container">

    <!-- HEADER -->
    <div class="page-header">
        <div class="header-left">
            <h1 class="page-title">👥 Quản Lý Khách Hàng </h1>
            
        </div>
        <div class="header-right">
            <button type="button" class="btn-primary" onclick="openAddUserModal()">
                ➕ Thêm Người Dùng
            </button>
        </div>
    </div>

    <!-- SEARCH -->
    <form method="get" class="filter-section">
        <input type="text"
               name="keyword"
               value="@Context.Request.Query["keyword"]"
               class="filter-input"
               placeholder="🔍 Tìm kiếm theo tên, email..." />
        <button type="submit" class="btn-primary">Tìm Kiếm</button>

        <button class="refresh-btn" onclick="location.reload()">🔄 Làm Mới</button>
    </form>

    <!-- TABLE -->
    <div class="table-card">
        <table class="data-table">
            <thead>
                <tr>
                    <th style="width:80px">ID</th>
                    <th>Họ Tên</th>
                    <th>Email</th>
                    <th style="width:120px">Vai Trò</th>
                    <th style="width:140px">Thao Tác</th>
                </tr>
            </thead>

            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var user in Model)
                    {
                        <tr>
                            <td>#@user.UserId</td>

                            <td>
                                <div class="user-cell">
                                    <div class="user-avatar @(user.Role == "Admin" ? "admin" : "")">
                                        @(user.Role == "Admin" ? "👑" : "👤")
                                    </div>
                                    <span>@user.FullName</span>
                                </div>
                            </td>

                            <td>@user.Email</td>

                            <td>
                                <span class="role-badge @(user.Role == "Admin" ? "admin" : "customer")">
                                    @user.Role
                                </span>
                            </td>

                            <td>
                                <button type="button"
                                        class="btn-action edit"
                                        title="Chỉnh sửa"
                                        onclick="editUser(@user.UserId)">
                                    ✏️
                                </button>

                                @if (user.Role != "Admin")
                                {
                                    <button type="button"
                                            class="btn-action delete"
                                            title="Xóa"
                                            onclick="deleteUser(@user.UserId)">
                                        🗑️
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center">
                            Không có người dùng nào
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- MODAL ADD / EDIT USER -->
<div class="modal" id="userModal">
    <div class="modal-overlay" onclick="closeUserModal()"></div>

    <div class="modal-content">
        <div class="modal-header">
            <h3 id="modalTitle">Người Dùng</h3>
            <button type="button" class="modal-close" onclick="closeUserModal()">✕</button>
        </div>

        <div class="modal-body">
            <div id="formMessage" class="form-message" style="display:none;"></div>

            <input type="hidden" id="userId" />

            <div class="form-group">
                <label>Họ tên</label>
                <input id="fullName" class="form-control" />
            </div>

            <div class="form-group">
                <label>Email</label>
                <input id="email" class="form-control" />
            </div>

            <div class="form-group">
                <label>Mật khẩu</label>
                <input id="password" type="password" class="form-control"
                       placeholder="Để trống nếu không đổi mật khẩu" />
            </div>

            <div class="form-group">
                <label>Vai trò</label>
                <select id="role" class="form-control">
                    <option value="User">Khách hàng</option>
                    <option value="Admin">Admin</option>
                </select>
            </div>
            <div id="formError" class="form-error mb-2" style="display:none;"></div>

        </div>

        <div class="modal-footer">
            <button type="button" class="btn-secondary" onclick="closeUserModal()">Hủy</button>
            <button type="button" class="btn-primary" onclick="saveUser()">Lưu</button>
        </div>
    

    </div>
</div>

@section Scripts {
    <script src="~/js/admin-users.js" asp-append-version="true"></script>
}
