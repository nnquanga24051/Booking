@{
    ViewData["Title"] = "Quản Lý Users";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-table.css" asp-append-version="true" />
}

<div class="page-container">
    <div class="page-header">
        <div class="header-left">
            <h1 class="page-title">👥 Quản Lý Người Dùng</h1>
            <p class="page-subtitle">Quản lý tất cả người dùng trong hệ thống</p>
        </div>
        <div class="header-right">
            <button class="btn-primary" onclick="openAddUserModal()">
                ➕ Thêm Người Dùng
            </button>
        </div>
    </div>

    <div class="filter-section">
        <div class="filter-group">
            <input type="text" id="searchInput" class="filter-input" placeholder="🔍 Tìm kiếm theo tên, email..." />
        </div>
        <div class="filter-group">
            <select id="roleFilter" class="filter-select">
                <option value="">Tất cả vai trò</option>
                <option value="ADMIN">Admin</option>
                <option value="CUSTOMER">Customer</option>
            </select>
        </div>
        <div class="filter-group">
            <select id="sortBy" class="filter-select">
                <option value="newest">Mới nhất</option>
                <option value="oldest">Cũ nhất</option>
                <option value="name">Tên A-Z</option>
            </select>
        </div>
    </div>

    <div class="table-card">
        <table class="data-table" id="usersTable">
            <thead>
                <tr>
                    <th>
                        <input type="checkbox" id="selectAll" />
                    </th>
                    <th>ID</th>
                    <th>Họ Tên</th>
                    <th>Email</th>
                    <th>Vai Trò</th>
                    <th>Ngày Tạo</th>
                    <th>Thao Tác</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><input type="checkbox" class="row-checkbox" /></td>
                    <td>#1</td>
                    <td>
                        <div class="user-cell">
                            <div class="user-avatar">👤</div>
                            <span>Nguyễn Văn A</span>
                        </div>
                    </td>
                    <td>a@gmail.com</td>
                    <td><span class="role-badge customer">Customer</span></td>
                    <td>01/01/2026</td>
                    <td>
                        <div class="action-buttons">
                            <button class="btn-action edit" onclick="editUser(1)">✏️</button>
                            <button class="btn-action delete" onclick="deleteUser(1)">🗑️</button>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td><input type="checkbox" class="row-checkbox" /></td>
                    <td>#2</td>
                    <td>
                        <div class="user-cell">
                            <div class="user-avatar">👤</div>
                            <span>Trần Thị B</span>
                        </div>
                    </td>
                    <td>b@gmail.com</td>
                    <td><span class="role-badge customer">Customer</span></td>
                    <td>02/01/2026</td>
                    <td>
                        <div class="action-buttons">
                            <button class="btn-action edit" onclick="editUser(2)">✏️</button>
                            <button class="btn-action delete" onclick="deleteUser(2)">🗑️</button>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td><input type="checkbox" class="row-checkbox" /></td>
                    <td>#3</td>
                    <td>
                        <div class="user-cell">
                            <div class="user-avatar">👤</div>
                            <span>Lê Văn C</span>
                        </div>
                    </td>
                    <td>c@gmail.com</td>
                    <td><span class="role-badge customer">Customer</span></td>
                    <td>03/01/2026</td>
                    <td>
                        <div class="action-buttons">
                            <button class="btn-action edit" onclick="editUser(3)">✏️</button>
                            <button class="btn-action delete" onclick="deleteUser(3)">🗑️</button>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td><input type="checkbox" class="row-checkbox" /></td>
                    <td>#4</td>
                    <td>
                        <div class="user-cell">
                            <div class="user-avatar admin">👑</div>
                            <span>Admin</span>
                        </div>
                    </td>
                    <td>admin@gmail.com</td>
                    <td><span class="role-badge admin">Admin</span></td>
                    <td>01/01/2026</td>
                    <td>
                        <div class="action-buttons">
                            <button class="btn-action edit" onclick="editUser(4)">✏️</button>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="pagination">
        <button class="page-btn" disabled>‹ Trước</button>
        <button class="page-btn active">1</button>
        <button class="page-btn">2</button>
        <button class="page-btn">3</button>
        <button class="page-btn">Sau ›</button>
    </div>
</div>

<div class="modal" id="userModal">
    <div class="modal-overlay" onclick="closeUserModal()"></div>
    <div class="modal-content">
        <div class="modal-header">
            <h3 id="modalTitle">➕ Thêm Người Dùng Mới</h3>
            <button class="modal-close" onclick="closeUserModal()">✕</button>
        </div>
        <div class="modal-body">
            <form id="userForm">
                <input type="hidden" id="userId" />

                <div class="form-group">
                    <label>Họ và Tên *</label>
                    <input type="text" id="fullName" class="form-control" required />
                </div>

                <div class="form-group">
                    <label>Email *</label>
                    <input type="email" id="email" class="form-control" required />
                </div>

                <div class="form-group">
                    <label>Mật khẩu *</label>
                    <input type="password" id="password" class="form-control" required />
                </div>

                <div class="form-group">
                    <label>Vai trò *</label>
                    <select id="role" class="form-control">
                        <option value="CUSTOMER">Customer</option>
                        <option value="ADMIN">Admin</option>
                    </select>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button class="btn-secondary" onclick="closeUserModal()">Hủy</button>
            <button class="btn-primary" onclick="saveUser()">Lưu</button>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/admin-users.js" asp-append-version="true"></script>
}